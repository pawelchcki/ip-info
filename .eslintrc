{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"mocha": true,
	},
	"rules": {
	  "semi": 2,
		"camelcase": 0,
		"curly": 0,
		"no-bitwise": 2,
		"eqeqeq": 2,
		"wrap-iife": [
			2,
			"any"
		],
		"indent": "off",
		// Needed for eslint v3->v4 migration to prevent many thousand warnings. Eventually fix these errors.
		"indent-legacy": [
			2,
			2,
			{
				"SwitchCase": 1
			}
		],
		"no-use-before-define": 2,
		"new-cap": 2,
		"no-caller": 2,
		"no-undef": 2,
		"strict": 0,
		"no-unused-expressions": 2,
		"no-eval": 2,
		"dot-notation": 0,
		"no-unused-vars": 2,
		"comma-style": [
			2,
			"last"
		],
		"no-irregular-whitespace": 2
	},
	"overrides": [
		{
			"files": [ "*.tests.js" ],
			"rules": {
				// Support chai.js expressions like `.to.be.ok` and `to.be.true`.
				"no-unused-expressions": 0
			}
		}
	]
}